<div class="author">
  <h1 class="author__heading">Hi, I am Kanishk.</h1>
  <p class="author__body">Creative Web Developer.</p>
</div>

<img src="/images/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Post</h2>

    <ul class="articles-ul">
        <!-- LOOP CREATING THE LIST  -->
        <% data.forEach(post => { %>
         <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="articles-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Post</a>    
    <% } %>

</section>